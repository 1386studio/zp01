extends layout
block content
  .layui-container
    .layui-row.layui-col-space15
      .layui-col-md8.content.detail
        .fly-panel.detail-box
          h1= article.title
          .fly-detail-info
            span= article.author
            span.fly-list-nums
              a(href='#comment')
                i.iconfont(title='回答') 
                |  44
              i.iconfont(title='人气') 
              |  3336
          .detail-body.photos!= article.content
      .layui-col-md4
        .fly-panel
          h3.fly-panel-title 推荐
          ul.fly-panel-main.fly-list-static
            each v,i in top
              li
                a(href=breadcrumb[0].path+"/detail?_id="+v._id)= v.title
        dl.fly-panel.fly-list-one
          dt.fly-panel-title 本周热点
          each v,i in hot
            dd
              a(href=breadcrumb[0].path+"/detail?_id="+v._id)= v.title
              span.pull-right
                i.layui-icon.layui-icon-read
                |  16